<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity ResourceOffer.
    -->
    <changeSet id="20141117144032" author="jhipster">
        <createTable tableName="T_RESOURCEOFFER">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(10,2)"/>
            <column name="description" type="varchar(255)"/>
            <column name="organisation_id" type="bigint"/>
            <column name="is_commercial" type="bit" defaultValue="false"/>
            <column name="is_recurrent" type="bit" defaultValue="false"/>
            <column name="start_date" type="timestamp"/>
            <column name="end_date" type="timestamp"/>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="is_active" type="bit"/>
        </createTable>

        <createIndex indexName="idx_resource_offer"
                     tableName="T_RESOURCEOFFER"
                     unique="true">
            <column name="name" type="varchar(50)"/>
            <column name="organisation_id" type="bigint"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>
