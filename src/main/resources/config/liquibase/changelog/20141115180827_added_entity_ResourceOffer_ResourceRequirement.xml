<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <changeSet id="20141115180827" author="Roman Kern">

        <createTable tableName="T_RESOURCETAG">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
        </createTable>

        <createTable tableName="T_RESOURCEOFFER">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="decimal(18,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="organisation_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
        </createTable>

        <createTable tableName="T_RESOURCEOFFER_T_RESOURCETAG">
            <column name="resourceTags_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="T_RESOURCEOFFER_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="resourceTags_id, T_RESOURCEOFFER_id" tableName="T_RESOURCEOFFER_T_RESOURCETAG"/>

        <createTable tableName="T_RESOURCEREQUIREMENT">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="decimal(18,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="resource_tag" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="is_essential" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="project_id"
                                 baseTableName="T_RESOURCEREQUIREMENT"
                                 constraintName="fk_res_req_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_PROJECT"/>

        <createTable tableName="T_RESOURCEREQUIREMENT_JOIN_RESOURCETAG">
            <column name="resource_tag_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="resource_offer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="resource_tag_id, resource_offer_id" tableName="T_RESOURCEREQUIREMENT_JOIN_RESOURCETAG"/>


        <createTable tableName="T_RESOURCEOFFER_TAKENBYPROJECT">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="decimal(18,2)">
                <constraints nullable="false"/>
            </column>
            <column name="resource_offer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="resource_requirement_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="resource_offer_id"
                                 baseTableName="T_RESOURCEOFFER_TAKENBYPROJECT"
                                 constraintName="fk_res_offer_tb_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_RESOURCEOFFER"/>


        <addForeignKeyConstraint baseColumnNames="resource_requirement_id"
                                 baseTableName="T_RESOURCEOFFER_TAKENBYPROJECT"
                                 constraintName="fk_res_req_tb_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_RESOURCEREQUIREMENT"/>

    </changeSet>
</databaseChangeLog>
